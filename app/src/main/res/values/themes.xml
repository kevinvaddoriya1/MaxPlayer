<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VideoPlayer" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
    </style>

    <style name="Theme.VideoPlayer" parent="Base.Theme.VideoPlayer"/>

    <style name="RoundShapeTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceMediumComponent">@style/RoundShapeAppearance</item>
    </style>

    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

    <style name="CustomShapeNeumorphCard">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSizeTopLeft">18dp</item>
        <item name="neumorph_cornerSizeTopRight">18dp</item>
        <item name="neumorph_cornerSizeBottomLeft">18dp</item>
        <item name="neumorph_cornerSizeBottomRight">18dp</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_lightSource">leftTop</item>
        <item name="neumorph_inset">12dp</item>
        <item name="neumorph_shadowElevation">6dp</item>
        <item name="neumorph_shadowColorLight">@color/white</item>
        <item name="neumorph_shadowColorDark">@color/shadowColorDark</item>
    </style>

    <style name="CustomShapeNeumorphButton">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSizeTopLeft">8dp</item>
        <item name="neumorph_cornerSizeTopRight">8dp</item>
        <item name="neumorph_cornerSizeBottomLeft">8dp</item>
        <item name="neumorph_cornerSizeBottomRight">8dp</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_lightSource">leftTop</item>
        <item name="neumorph_inset">12dp</item>
        <item name="neumorph_shadowElevation">6dp</item>
        <item name="neumorph_shadowColorLight">@color/white</item>
        <item name="neumorph_shadowColorDark">@color/shadowColorDark</item>
    </style>
</resources>